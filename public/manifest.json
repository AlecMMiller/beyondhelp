{
  "name": "Beyond Help",
  "version": "0.1.0",
  "description": "Chrome extension with helpers to https://www.dndbeyond.com/.",
  "background": {
    "scripts": [
      "extensionbackground.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.dndbeyond.com/monsters/*"],
      "js": ["extensioncontentscript.js"]
    }
  ],
  "page_action": {
    "default_icon": "icon-19.png",
    "default_title": "Beyond Help",
    "default_popup": "index.html"
  },
  "permissions": [
    "declarativeContent", "activeTab", "webRequest", "https://www.dndbeyond.com/*"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}